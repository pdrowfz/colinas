generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Game {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    date DateTime
    week Int
    awayTeam String @db.VarChar(3)
    homeTeam String @db.VarChar(3)
    awayScore Int?
    homeScore Int?
    final Boolean @default(false)

    @@index([week])
}

model Pick {
    id        String   @id @default(cuid())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    gameId String
    authorId String
    pick String @db.VarChar(4)
}
